<Page
    x:Class="MakeOthello.View.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakeOthello.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:MakeOthello.View"
    d:DesignHeight="640"
    d:DesignWidth="360"
    mc:Ignorable="d" >
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" MaxWidth="720">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="17*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Height="60" Width="150" Style="{StaticResource NormalButton}"
                    BorderBrush="White" BorderThickness="2"
                    Grid.Column="0" Grid.Row="0" Command="{Binding BackCommand}">back</Button>
            <Button Height="60" Width="150" Style="{StaticResource NormalButton}"
                    BorderBrush="White"
                    Grid.Column="2" Grid.Row="0" Click="Button_Click">quit</Button>
            <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" 
                       Foreground="White"
                       Text="{Binding DiscNumberLeft}"></TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" 
                       Foreground="White"
                       Text="{Binding DiscNumberRight}"></TextBlock>
            <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" 
                       Foreground="White"
                       Text="{Binding PlayerLeft}"></TextBlock>
            <TextBlock Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" 
                       Foreground="White"
                       Text="{Binding PlayerRight}"></TextBlock>
        </Grid>
        <view:BoardControle x:Name="BoardControle" Grid.Row="1" 
                            MaxWidth="700" MaxHeight="700"
                            DataContext="{Binding}"></view:BoardControle>
        <local:PopUpControl Grid.Row="1" Height="100" Width="500" DataContext="{Binding PopUpData}" d:IsHidden="True"></local:PopUpControl>
        <local:WinSign Grid.Row="1" DataContext="{Binding WinPopUpData}" d:IsHidden="True"></local:WinSign>
        <local:LoseSign Grid.Row="1" DataContext="{Binding LosePopUpData}" d:IsHidden="True"></local:LoseSign>
    </Grid>
</Page>
