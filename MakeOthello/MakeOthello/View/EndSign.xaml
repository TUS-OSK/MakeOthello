<UserControl
    x:Class="MakeOthello.View.EndSign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakeOthello.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight ="180"
    d:DesignWidth ="360"
    Visibility="{Binding Visibility}">

    <Grid>
        <Border CornerRadius="50" Background="CadetBlue"></Border>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Margin="90,0,100,30" Foreground="White" FontSize="20" Height="50" Width="170" Text="{Binding EndText}" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Style="{StaticResource NormalButton}" Background="White" Margin="7.5,0,35,0" Height="60" Width="150" Foreground="Red"
                        Command="{Binding OkCommand}">
                    Play Again
                </Button>
                <Button Style="{StaticResource NormalButton}" Command="{Binding QuitCommand}"
                        Background="White" Margin="0,0,7.5,0" Height="60" Width="150" Foreground="CadetBlue">
                    Quit
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
