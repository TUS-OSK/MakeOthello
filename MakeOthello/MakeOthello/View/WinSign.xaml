<UserControl
    x:Class="MakeOthello.View.WinSign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakeOthello.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d"
    d:DesignHeight ="180"
    d:DesignWidth ="360"
    Visibility="{Binding Visibility}">

    <Grid>
        <Border CornerRadius="50" Background="DarkRed"></Border>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Margin="0,0,0,30" Foreground="White" FontSize="35" Height="50" Width="120" Text="Success" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Style="{StaticResource NormalButton}" Background="White" Margin="7.5,0,35,0" Height="60" Width="150" Foreground="DarkRed"
                        Command="{Binding OkCommand}">
                    Play Again
                </Button>
                <Button Style="{StaticResource NormalButton}" Command="{Binding QuitCommand}"
                        Background="White" Height="60" Width="150" Margin="0,0,7.5,0"   Foreground="DarkRed">
                    Quit
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
