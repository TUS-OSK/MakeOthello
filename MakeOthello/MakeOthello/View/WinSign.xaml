<UserControl
    x:Class="MakeOthello.View.WinSign"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MakeOthello.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d"
    d:DesignHeight ="180"
    d:DesignWidth ="360"
    Visibility="{Binding Visibility}">

    <Grid>
        <Border CornerRadius="50" Background="DarkGreen"></Border>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Margin="0,0,0,30" Foreground="White" FontSize="35" Height="50" Width="120" Text="Success" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

              

                <Button Style="{StaticResource SmallButton}"  Margin="7.5,0,35,0" 
                        Command="{Binding OkCommand}">

                    Play Again
                </Button>
                <Button Style="{StaticResource SmallButton}" Command="{Binding QuitCommand}"
                        Margin="7,5,0.35,0" >
                    Quit
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
